<!-- HEADER -->
<%- include ../../partials/header.ejs %>
<!-- END HEADER -->
<!-- NAVBAR -->
<%- include ../../partials/navbar.ejs %>
<!-- END NAVBAR -->
<!-- SIDEBAR -->
<%- include ../../partials/sidebar.ejs %>
<!-- END SIDEBAR -->

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Nominal</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="/nominal">Nominal</a></li>
            <li class="breadcrumb-item active">Tambah</li>
          </ol>
        </div>
      </div>
    </div>
    <!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
          <!-- general form elements -->
          <div class="card card-primary">
            <div class="card-header">
              <h3 class="card-title"><%= title %></h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <form action="/nominal/create" method="POST">
              <div class="card-body">
                <div class="form-group">
                  <label>Nama Koin</label>
                  <select
                    class="form-control select2"
                    style="width: 100%"
                    name="coinName"
                    required
                  >
                    <option selected="selected">Pilih Koin</option>
                    <option>Gold</option>
                    <option>Diamond</option>
                    <option>Jewel</option>
                  </select>
                </div>
                <div class="form-group">
                  <label for="coinQuantity">Jumlah Koin</label>
                  <input
                    type="number"
                    name="coinQuantity"
                    class="form-control"
                    id="coinQuantity"
                    placeholder="Masukan Jumlah Koin"
                    required
                  />
                </div>
                <div class="form-group">
                  <label for="price">Harga</label>
                  <input
                    type="number"
                    name="price"
                    class="form-control"
                    id="price"
                    placeholder="Masukan Harga"
                    required
                  />
                </div>
              </div>
              <!-- /.card-body -->

              <div class="card-footer">
                <button type="submit" class="btn btn-primary btn-sm">
                  Simpan
                </button>
              </div>
            </form>
          </div>
          <!-- /.card -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>
<!-- /.content-wrapper -->

<!-- FOOTER -->
<%- include ../../partials/footer.ejs %>
<!-- END FOOTER -->

<!-- JAVASCRIPT -->
<%- include ../../partials/js.ejs %>
<!-- END JAVASCRIPT -->
